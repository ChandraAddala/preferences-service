{
    "title":        "Cloud Feeds Archiving Preferences",
    "description" : "Schema for Cloud Feeds Archiving Preferences",
    "type":         "object",
    "$schema":      "http://json-schema.org/draft-03/schema#",
    "id":           "http://docs.rackspace.com/preferences/feeds_archiving",
    "required":     false,
    "properties": {
        "archive_container_urls": {
            "id":         "#archive_container_urls",
            "type":       "object",
            "required":   false,
            "properties": {
                "dfw": {
                    "id":       "#archive_container_urls/dfw",
                    "type":     "string",
                    "required": false
                },
                "hkg": {
                    "id":       "#archive_container_urls/hkg",
                    "type":     "string",
                    "required": false
                },
                "iad": {
                    "id":       "#archive_container_urls/iad",
                    "type":     "string",
                    "required": false
                },
                "lon": {
                    "id":       "#archive_container_urls/lon",
                    "type":     "string",
                    "required": false
                },
                "ord": {
                    "id":       "#archive_container_urls/ord",
                    "type":     "string",
                    "required": false
                },
                "syd": {
                    "id":       "#archive_container_urls/syd",
                    "type":     "string",
                    "required": false
                }
            }
        },
        "data_format": {
            "id":           "#data_format",
            "type":         "array",
            "items": {
                "type": "string",
                "enum": ["JSON", "XML"]
            },
            "description":  "A list of archiving format that a user prefers to have. Values are: JSON, XML",
            "required":     true
        },
        "default_archive_container_name": {
            "id":           "#default_archive_container_name",
            "type":         "string",
            "description":  "The default container name. If no data center specific container URLs are set, then archives will be stored in this container that data center.",
            "default":      "FeedsArchives",
            "required":     false
        },
        "enabled": {
            "id":          "#enabled",
            "type":        "boolean",
            "description": "Indicates whether Cloud Feeds archiving is enabled for this cloud account",
            "default":     false,
            "required":    false
        }
    }
}
